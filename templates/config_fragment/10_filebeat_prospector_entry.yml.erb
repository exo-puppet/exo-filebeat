    -
      paths:
<% scope.lookupvar("paths").flatten.each do |path| -%>
        - <%= path %>
<% end -%>
      input_type: log
      fields_under_root: <%= scope.lookupvar("fields_under_root") %>
      fields:
<% scope.lookupvar("fields").flatten.each do |field| -%>
        <%= field %>
<% end -%>
      encoding: plain
<%- unless @include_lines.empty? -%>
      include_lines: <%= @include_lines.to_s %>
<%- end -%>
<%- unless @exclude_lines.empty? -%>
      exclude_lines: <%= @exclude_lines.to_s %>
<%- end -%>
<% if scope.lookupvar("multiline") -%>
      multiline:
        pattern: <%= scope.lookupvar("multiline_pattern") %>
        negate: <%= scope.lookupvar("multiline_pattern_negate") %>
        match: <%= scope.lookupvar("multiline_match") %>
<% end -%>
